@model PagerModel
<div class="container m-0 p-0 btn-group" style="background-color:black; border-radius:10px; height:45px; color:white;">
    <div class="col-4 btn-group p-1 m-1">
        <p>
            Products from @Model.StartRecord to @Model.EndRecord (@Model.TotalItems products in database)
        </p>
    </div>
    <div class="col-3 btn-group justify-content-end">
        <span class="col-7 mt-2 p-0">
            Products on page:
        </span>
        <span class="col-5 p-1">
            <select class="form-control" id="pageSelector" asp-items="Model.GetPageSizes()"
                    onchange="ChangePageSize(this);">
            </select>
        </span>
    </div>
    <div class="col-5 btn-group justify-content-end mt-2">
        <p>
            Page: @Model.CurrentPage / @Model.TotalItems
        </p>
    </div>
</div>
<script>
    function ChangePageSize(obj) {
        var controllerName = '@this.ViewContext.RouteData.Values["controller"].ToString()';
       window.location.href = "/" + controllerName + "/@Model.Action" + "?pageSize=" + obj.value + "&SearchText@Model.SearchText" + "&sortExpression=" + "@Model.SortExpression";
    }
</script>
