<form asp-action="Delete">
    <div class="col-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="UnitId" class="control-label"></label>
            <input asp-for="@Model.Units.Name" class="form-control" readonly />
        </div>
        <div class="text-danger btn-group" asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Code" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="index"
           asp-route-pg="@TempData["CurrentPage"]">Back</a>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}